---
apiVersion: metallb.io/v1beta1
kind: IPAddressPool
metadata:
  name: default
  namespace: "{{ metallb_namespace }}"
spec:
  addresses:
  - "{{ metallb_ip_pool }}"
---
apiVersion: metallb.io/v1beta1
kind: L2Advertisement
metadata:
  name: default
  namespace: "{{ metallb_namespace }}"
spec:
  ipAddressPools:
    - default
